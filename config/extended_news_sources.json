  "aggregation_rules": {
    "duplicate_detection": {
      "enabled": true,
      "similarity_threshold": 0.85,
      "fields": ["title", "summary"],
      "action": "keep_highest_priority"
    },
    "content_clustering": {
      "enabled": true,
      "similarity_threshold": 0.70,
      "time_window": "2h",
      "min_cluster_size": 2,
      "max_cluster_size": 10
    },
    "trending_detection": {
      "enabled": true,
      "min_articles": 3,
      "time_window": "2h",
      "keyword_threshold": 2
    }
  },
  "quality_scoring": {
    "source_reliability": {
      "eastmoney": 0.9,
      "tonghuashun": 0.85,
      "sina": 0.8,
      "tencent": 0.8,
      "xueqiu": 0.7,
      "hexun": 0.75,
      "caixin": 0.95,
      "wallstreetcn": 0.9
    },
    "content_freshness": {
      "max_age_hours": 24,
      "freshness_weight": 0.3
    },
    "relevance_scoring": {
      "title_weight": 0.5,
      "content_weight": 0.3,
      "tag_weight": 0.2
    }
  },
  "caching": {
    "enabled": true,
    "cache_duration_minutes": 15,
    "max_cache_items": 1000,
    "cache_cleanup_interval": "1h"
  },
  "performance": {
    "max_concurrent_requests": 5,
    "request_timeout_seconds": 30,
    "retry_attempts": 3,
    "retry_delay_seconds": 1
  }
}